# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = CRLF
insert_final_newline = false
trim_trailing_whitespace = true
quote_type = single


[*.md]
max_line_length = 0
trim_trailing_whitespace = false

# 4 tab indentation
[Makefile]
indent_style = tab
indent_size = 4